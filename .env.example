# ============================================
# CFO Financial Platform - Environment Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# --------------------------------------------
# KMS & Encryption (REQUIRED)
# --------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
KMS_MASTER_KEY=BASE64_32_BYTES_GENERATED_BY_NODE

# --------------------------------------------
# Database Configuration
# --------------------------------------------
PG_ROOT_USER=postgres
PG_ROOT_PASSWORD=postgres
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=postgres

# For production, use strong passwords:
# Generate with: openssl rand -base64 32

# --------------------------------------------
# Backend Configuration
# --------------------------------------------
PORT=3000
NODE_ENV=development
API_PREFIX=api

# JWT Configuration
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# --------------------------------------------
# Keycloak Configuration
# --------------------------------------------
KEYCLOAK_HOST=http://localhost:8081
KEYCLOAK_CLIENT_ID=cfo-client
KEYCLOAK_CLIENT_SECRET=secret
KEYCLOAK_REALM=master
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# For production Keycloak:
# - Use HTTPS URLs
# - Generate strong admin password: openssl rand -base64 32
# - Rotate client secrets regularly

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
VITE_API_BASE=http://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8081
VITE_KEYCLOAK_REALM=master
VITE_KEYCLOAK_CLIENT_ID=cfo-client

# --------------------------------------------
# External Services (Optional)
# --------------------------------------------
# OpenAI API (for AI-powered features in Swagger)
OPENAI_API_KEY=sk-your_openai_api_key_here

# --------------------------------------------
# Security & Rate Limiting
# --------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# --------------------------------------------
# Logging & Monitoring (Optional)
# --------------------------------------------
LOG_LEVEL=info
ENABLE_SWAGGER=true
DEBUG=true

# --------------------------------------------
# Email Configuration (Optional)
# --------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=noreply@cfo-platform.com

# --------------------------------------------
# Production Checklist (Before Deployment)
# --------------------------------------------
# ✅ Change all default passwords
# ✅ Generate strong JWT secrets
# ✅ Generate unique KMS master key
# ✅ Use HTTPS for all URLs
# ✅ Disable DEBUG and ENABLE_SWAGGER in production
# ✅ Configure proper CORS_ORIGIN
# ✅ Set up monitoring (Sentry/CloudWatch)
# ✅ Configure backup strategy
# ✅ Review rate limiting settings
# ✅ Enable SSL/TLS for database connections
# ✅ Rotate credentials regularly
